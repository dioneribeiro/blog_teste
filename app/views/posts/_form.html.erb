    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control form-control-lg"%>
  </div>

  <div class="mb-3 mt-3 text-center d-flex justify-content-center">
    <p href="#"> 
      <%= form.submit class: "btn btn-primary btn-lg mb-3", style: "max-width: 10rem;" %>
